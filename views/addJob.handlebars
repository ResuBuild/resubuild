                  <h2 class="form-control-label Raleway1p5">Job Responsibility*</h2>
                  <textarea name="responsibility" tabindex="3" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                  <h2 class="form-control-label Raleway1p5">Required Skills*</h2>
                  <textarea name="skills" tabindex="4" class="form-control" required></textarea>
                </div>
                <span class="input-group-btn">
                  <button name="submit" type="submit" class="btn btn-fill Raleway1p5">Submit</button>
                </span>
              </form>
          </div>
        </div>
