          <div class="container col-lg-7">
              <form method="post" action = '/addJob' onsubmit="parent.scrollTo(0,0);">
                <div class="form-group">
                  <h2 class="form-control-label Raleway1p5">Title*</h2>
                  <input type="text" name="name" tabindex="1" class="form-control" required>
                </div>
                <div class="form-group">
                  <h2 class="form-control-label Raleway1p5">Job Summary*</h2>
                  <textarea name="summary" tabindex="2" class="form-control" required></textarea>
                </div>
